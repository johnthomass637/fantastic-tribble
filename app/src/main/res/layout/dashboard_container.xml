<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:orientation="horizontal"
    android:padding="10dp">

    <ImageView
        android:id="@+id/caseHolderImage"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:foreground="@drawable/image_roundview"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/caseHolderName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Name"
        android:textColor="#000000"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/caseHolderImage"
        android:layout_toLeftOf="@+id/caseStatus"/>

    <TextView
        android:id="@+id/caseStatus"
        android:layout_width="93dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="18dp"
        android:background="@drawable/status_background"
        android:gravity="center"
        android:text="Status"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/orange" />

    <TextView
        android:id="@+id/caseId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/caseHolderName"
        android:layout_marginStart="9dp"

        android:layout_marginLeft="9dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@id/caseHolderImage"
        android:layout_toRightOf="@id/caseHolderImage"
        android:text="CaseID"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#666" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text=""
        android:id="@+id/textType"
        android:layout_marginLeft="5dp"
        android:layout_below="@id/caseId"
        android:layout_toRightOf="@id/caseHolderImage"
        android:textColor="#666"/>

</RelativeLayout>